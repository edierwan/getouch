<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09090B"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“± Getouch SMS"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS Gateway Client"
            android:textSize="14sp"
            android:textColor="#71717A"
            android:layout_marginBottom="24dp" />

        <!-- Not Paired Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/notPairedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#18181B"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¡"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Not Paired"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan the QR code from your Getouch Admin panel\nor enter the pairing token manually."
                    android:textSize="13sp"
                    android:textColor="#A1A1AA"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/btnPair"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Pair Device"
                    style="@style/PrimaryButton" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Card (visible when paired) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#18181B"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Status row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:id="@+id/statusDot"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/dot_offline"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Connectingâ€¦"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SMS Relay"
                        android:textSize="11sp"
                        android:textColor="#6366F1"
                        android:background="@drawable/badge_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp" />
                </LinearLayout>

                <!-- Info rows -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Device"
                        android:textSize="12sp"
                        android:textColor="#71717A" />
                    <TextView
                        android:id="@+id/deviceName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â€”"
                        android:textSize="13sp"
                        android:textColor="#D4D4D8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tenant"
                        android:textSize="12sp"
                        android:textColor="#71717A" />
                    <TextView
                        android:id="@+id/tenantName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â€”"
                        android:textSize="13sp"
                        android:textColor="#D4D4D8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Server"
                        android:textSize="12sp"
                        android:textColor="#71717A" />
                    <TextView
                        android:id="@+id/serverUrl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â€”"
                        android:textSize="13sp"
                        android:textColor="#D4D4D8"
                        android:ellipsize="middle"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Last Sync"
                        android:textSize="12sp"
                        android:textColor="#71717A" />
                    <TextView
                        android:id="@+id/lastSync"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Never"
                        android:textSize="13sp"
                        android:textColor="#D4D4D8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Queue"
                        android:textSize="12sp"
                        android:textColor="#71717A" />
                    <TextView
                        android:id="@+id/queueCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Empty"
                        android:textSize="13sp"
                        android:textColor="#D4D4D8" />
                </LinearLayout>

                <!-- Unpair button -->
                <Button
                    android:id="@+id/btnUnpair"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/unpair"
                    style="@style/DangerButton" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="getouch.co Â· SMS Gateway v1.0"
            android:textSize="11sp"
            android:textColor="#3F3F46"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
