PORT=3000
NODE_ENV=development
VERSION=1.0.0

# PostgreSQL connection
DATABASE_URL=postgresql://getouch:YOUR_PASSWORD@localhost:5432/getouch

# Session secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=change-me-to-a-random-secret

# Internal URLs for server-side health probes
# Docker:  http://bot:3000, http://wa:3000, http://api:3000
# Local:   services may not be running — status will show "Offline"
BOT_INTERNAL_URL=http://localhost:3001
WA_INTERNAL_URL=http://localhost:3002
API_INTERNAL_URL=http://localhost:3003

# Public URLs rendered in page links
PUBLIC_BOT_URL=https://bot.getouch.co
PUBLIC_WA_URL=https://wa.getouch.co
PUBLIC_API_URL=https://api.getouch.co
PUBLIC_DB_URL=https://db.getouch.co

# ── OAuth (Google) ───────────────────────────────────────
# Google Cloud Console → APIs & Services → Credentials
# Authorized JavaScript origins: https://getouch.co
# Authorized redirect URI:       https://getouch.co/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ── OAuth (Facebook) ────────────────────────────────────
# Meta for Developers → App Settings → Basic
# Valid OAuth Redirect URIs: https://getouch.co/api/auth/callback/facebook
# App Domains:               getouch.co
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Base URL for OAuth callback generation (must match your public domain)
BASE_URL=https://getouch.co
